<Application x:Class="BusinessManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Views/Workspace.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ModernWPF UI theme and controls -->
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                
                <!-- Common UI resources -->
                <ResourceDictionary Source="Views/Styles/Common.xaml" />
                <ResourceDictionary Source="Views/Styles/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

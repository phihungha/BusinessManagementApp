<Application x:Class="BusinessManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ModernWPF UI theme and controls -->
                <ui:ThemeResources AccentColor="#00a6ff" />
                <ui:XamlControlsResources />
                
                <!-- Common UI resources -->
                <ResourceDictionary Source="Views/Resources/Common.xaml" />
                <ResourceDictionary Source="Views/Resources/Colors.xaml" />
                <ResourceDictionary Source="Views/Resources/Icons.xaml" />
                <ResourceDictionary Source="Views/Resources/Custom.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

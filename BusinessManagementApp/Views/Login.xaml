<UserControl x:Class="BusinessManagementApp.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1290">
    <Border Background="#FF474747">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="400" Padding="10,15,10,15" CornerRadius="15" Background="White">
            <ui:SimpleStackPanel Spacing="20">
                <TextBox Text="{Binding UserName}" ui:ControlHelper.PlaceholderText="Username..." />
                <PasswordBox Name="Password" PasswordChanged="Password_PasswordChanged" ui:ControlHelper.PlaceholderText="Password..." />
                <Button Command="{Binding Login}" HorizontalAlignment="Center" Foreground="White"
                        Background="{StaticResource PrimaryColorBrush}">
                    Login
                </Button>
            </ui:SimpleStackPanel>
        </Border>
    </Border>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#00a6ff</Color>
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />
    
    <Color x:Key="DangerColor">Red</Color>
    <SolidColorBrush x:Key="DangerColorBrush" Color="{StaticResource DangerColor}" />
    
    <Color x:Key="CancelColor">Gray</Color>
    <SolidColorBrush x:Key="CancelColorBrush" Color="{StaticResource CancelColor}" />

    <Color x:Key="AppBackgroundColor">#f7f7f7</Color>
    <SolidColorBrush x:Key="AppBackgroundColorBrush" Color="{StaticResource AppBackgroundColor}" />

    <Color x:Key="WarningColor">#ffdd00</Color>
    <SolidColorBrush x:Key="WarningColorBrush" Color="{StaticResource WarningColor}" />
</ResourceDictionary>
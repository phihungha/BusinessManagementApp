<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxTopLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="TextBoxLeftLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="ViewTitleBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#00a6ff" />
        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
        <Setter Property="Padding" Value="0,0,0,15" />
    </Style>

    <Style x:Key="ViewTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryColorBrush}" />
    </Style>
</ResourceDictionary>